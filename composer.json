{
    "name": "phprestfulapi/resource-server-middleware",
    "type": "library",
    "description": "PSR-15 Resource server middleware for League\\OAuth2",
    "keywords": [
        "oauth2",
        "League\\OAuth2",
        "PSR-7",
        "PSR-15",
        "PSR-17"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "league/oauth2-server": "^8.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PhpRestfulapi\\ResourceServerMiddleware\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "@phpcs",
            "@phpstan"
        ],
        "phpcs": "phpcs --standard=PSR12 --extensions=php --ignore=vendor/,test/ ./",
        "phpstan": "phpstan analyse --memory-limit=-1"
    }
}
